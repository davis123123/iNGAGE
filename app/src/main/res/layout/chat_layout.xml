<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@layout/left_chat_bubble"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/message_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Hello world"
            android:gravity="left"
            android:textSize="22sp"
            android:layout_marginLeft="20dp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/message_user_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textStyle="italic"
            android:text="Username"
            android:gravity="left"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="15sp"
            android:layout_below="@+id/message_content_view"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="#FFFFFF"/>
    </LinearLayout>


        <TextView
            android:id="@+id/message_date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic|bold|normal"
            android:text=" 5:10:11 PM"
            android:gravity="left"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="right"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"/>


</RelativeLayout>
