<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/app_bar_chat"
    android:background="#776A6A"
    android:id="@+id/rlChatActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_pages_container">

    </LinearLayout>
    <FrameLayout
        android:id="@+id/chat_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_pages_container"
        android:layout_above="@+id/text_area" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_area"
        android:background="#B5B0B0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">


        <EditText
            android:id="@+id/msgField"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@layout/message_field"
            android:gravity="top"
            android:hint="Type message here..."
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:imeOptions="actionDone"
            android:padding="5dp"
            android:inputType="textCapSentences" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/msgField"
        android:layout_alignParentBottom="true"
        android:id="@+id/text_right">

        <Button
            android:id="@+id/cooldownButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:layout_marginTop="15dp"
            android:background="@layout/button"
            android:text="CD"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/timertv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sendMessageButton"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@+id/msgField"
            android:textSize="32dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/sendMessageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_above="@+id/timertv"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/chatrecyclerView"
            android:layout_toEndOf="@+id/msgField"
            android:background="@drawable/page_list_button"
            android:text="SEND"
            android:textColor="#FFFFFF"
            android:layout_alignParentBottom="true"/>

    </LinearLayout>


    </LinearLayout>

</RelativeLayout>