<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/right_chat_bubble"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/message_content_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Hello world"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:gravity="right"
            android:textSize="22sp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/message_user_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_content_view"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:gravity="right"
            android:text="Username"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/message_date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic|bold|normal"
            android:text=" 5:10:11 PM"
            android:gravity="left"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="right"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentEnd="true" />
    </LinearLayout>



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up"
        android:id="@+id/upvote"
        android:src="@drawable/up_arrow"
        android:background="@null"
        android:layout_below="@+id/linearLayout"
        android:layout_toStartOf="@+id/downvote" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Down"
        android:id="@+id/downvote"
        android:src="@drawable/down_arrow"
        android:background="@null"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="  Up"
        android:textColor="#FFFFFF"
        android:id="@+id/up_label"
        android:layout_below="@+id/upvote"
        android:layout_alignStart="@+id/upvote"
        android:layout_alignEnd="@+id/upvote" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:text="Down"
        android:id="@+id/down_label"
        android:layout_below="@+id/downvote"
        android:layout_alignEnd="@+id/downvote" />



</RelativeLayout>
